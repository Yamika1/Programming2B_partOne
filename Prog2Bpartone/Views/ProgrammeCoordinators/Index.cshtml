@model List<Prog2Bpartone.Models.Claims>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string currentFilter = ViewBag.Filter?.ToString()?.ToLower() ?? "all";
}



<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Programme Coordinator – Claims Dashboard</h2>
</div>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}


<div class="btn-group mb-4" role="group">
    <a asp-action="Index" asp-route-filter="all"
       class="btn btn-outline-primary @(currentFilter == "all" ? "active" : "")">
        All (@(Model.Count))
    </a>
    <a asp-action="Index" asp-route-filter="pending"
       class="btn btn-outline-warning @(currentFilter == "pending" ? "active" : "")">
        Pending (@ViewBag.PendingCount)
    </a>
    <a asp-action="Index" asp-route-filter="verified"
       class="btn btn-outline-info @(currentFilter == "verified" ? "active" : "")">
        Verified (@ViewBag.VerifiedCount)
    </a>

    <a asp-action="Index" asp-route-filter="rejected"
       class="btn btn-outline-danger @(currentFilter == "rejected" ? "active" : "")">
        Rejected (@ViewBag.RejectedCount)
    </a>
</div>


<div class="card">
    <div class="card-body">
        @if (Model == null || Model.Count == 0)
        {
            <div class="text-muted text-center py-4">
                No claims found for this category.
            </div>
        }
        else
        {
            <table class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Claim ID</th>
                        <th>Claim Type</th>
                        <th>Claim Month</th>
                        <th>Hours worked</th>
                        <th>hourly rate</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {


                        <tr>
                            <td><strong>@claim.ClaimId</strong></td>
                            <td>@claim.ClaimName</td>
                            <td>@claim.ClaimType</td>
                            <td>@claim.ClaimMonth</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate</td>
                            <td>@claim.SubmittedDate.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (claim.Status == Prog2Bpartone.Models.ClaimStatus.Pending)
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (claim.Status == Prog2Bpartone.Models.ClaimStatus.Verified)
                                {
                                    <span class="badge bg-info">Verified</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                            </td>

                            <td>
                                <a href="/ProgrammeCoordinators/Review/@claim.ClaimId" class="btn btn-sm btn-primary">
                                    @(claim.Status == Prog2Bpartone.Models.ClaimStatus.Pending ? "Review" : "View")
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

